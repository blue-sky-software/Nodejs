<div class="login container">
  <div class="section">
    <div class="row">
      <div class="col s6 offset-s3">
        <div class="card-panel z-depth-2 blue-grey darken-3 white-text">
          <div class="row">
            <div class="col s12 center">
              <h2 class="light-weight"><%= __('heading.welcome') %></h2>
              <% if(typeof error !== 'undefined') { %>
                <p class="flow-text red-text lighten-2"><small><%- __('error.' + error) %></small></p>
              <% } else { %>
                <p class="flow-text"><small><%= __('instructions.login') %></small></p>
              <% } %>
              <form action="/login" method="POST">
                <div class="row">
                  <div class="input-field col s12">
                    <input class="validate" required type="text" autocomplete="off" name="username" autofocus>
                    <label><%= __('label.username') %></label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <input class="validate" required type="password" name="password">
                    <label><%= __('label.password') %></label>
                  </div>
                </div>
                <div class="row">
                  <button class="col s12 btn waves-effect waves-light">
                    <%= __('label.login') %>
                    <i class="mdi-content-send right"></i>
                  </button>
                </div>
              </form>
              <form action="/auth/signup" method="GET">
                <div class="row">
                  <button class="col s12 btn waves-effect waves-light">
                    <%= __('label.signup') %>
                    <i class="mdi-content-send right"></i>
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>